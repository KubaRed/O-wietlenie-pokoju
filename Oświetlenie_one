#include <ESP8266WiFi.h>
#include <WiFiUdp.h>
#include <BlynkSimpleEsp8266.h>

char auth[] = "c2ac05057e1f41b48d5a90d1d4996ab5";
char ssid[] = "AndroidAP";
char pass[] = "qizb4415";

int S0=LOW;
int S1=LOW;
int S2=LOW;
int Si0=HIGH;
int Si1=HIGH;
int Si2=HIGH;

BlynkTimer timer;

BLYNK_CONNECTED()
{
  Blynk.syncVirtual(V0);
  Blynk.syncVirtual(V1);
  Blynk.syncVirtual(V2);
}

BLYNK_WRITE(V0)
{
 S0 =  param.asInt();
 digitalWrite(16,S0); 
}

BLYNK_WRITE(V1)
{
 S1 =  param.asInt();
 digitalWrite(14,S1); 
}

BLYNK_WRITE(V2)
{
 S2 =  param.asInt();
 digitalWrite(12,S2); 
}


void W0()

  int Sw0=digitalRead(5);

  if(Sw0!=Si0)
  { 
    Si0=!Si0;
    S0=!S0;
    Blynk.virtualWrite(V0, S0);
    digitalWrite(16,S0);
  }
    
}
void W1()
{ 
  int Sw1=digitalRead(4);
  
  if(Sw1!=Si1)
  {
    Si1=!Si1;
    S1=!S1;
    Blynk.virtualWrite(V1, S1);
    digitalWrite(14,S1);
  }
    
}

void W2()
{ 
  int Sw2=digitalRead(13);
   
  if(Sw2!=Si2)
  {
    Si2=!Si2;
    S2=!S2;
    Blynk.virtualWrite(V2, S2);
    digitalWrite(12,S2);
  }
    
}

void setup()
{

  Serial.begin(115200);  
  Blynk.begin(auth, ssid, pass);
  pinMode(12,OUTPUT);
  pinMode(16,OUTPUT);
  pinMode(14,OUTPUT);
  pinMode(13,INPUT_PULLUP);
  pinMode(4,INPUT_PULLUP);
  pinMode(5,INPUT_PULLUP);
  
  Si2=digitalRead(13);
  Si1=digitalRead(4);
  Si0=digitalRead(5);

  digitalWrite(12,S2);
  digitalWrite(14,S1);
  digitalWrite(16,S0);

  Blynk.virtualWrite(V0, LOW);
  Blynk.virtualWrite(V1, LOW);
  Blynk.virtualWrite(V2, LOW);

}

void loop()
{
  Blynk.run();
  timer.run();

  W2();
  W1();
  W0();
}
